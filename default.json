{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Shareable configuration for automated dependency updates",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    ":autodetectPinVersions",
    ":prHourlyLimit2",
    ":prConcurrentLimit10",
    ":gitSignOff",
    "group:monorepos",
    "group:recommended",
    "workarounds:all"
  ],
  "dependencyDashboardApproval": true,
  "dependencyDashboardAutoclose": true,
  "assigneesFromCodeOwners": true,
  "commitBody": "Signed-off-by: {{{gitAuthor}}}",
  "groupName": "All dependencies",
  "groupSlug": "all",
  "separateMajorMinor": true,
  "separateMinorPatch": true,
  "patch": {
    "automerge": true
  },
  "pin": {
    "commitBody": "[skip CI]",
    "automerge": true
  },
  "lockFileMaintenance": {
    "commitBody": "[skip CI]",
    "automerge": true,
    "extends": [
      "group:all"
    ]  
  },
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["optionalDependencies"],
      'groupSlug": "optional-dependencies",
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "groupSlug": "dev-dependencies",
      "automerge": true
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "groupSlug": "peer-dependencies",
      "automerge": true
    },
    {
      "groupName": "Eslint",
      "groupSlug": "eslint-packages",
      "matchPackagePatterns": ["^eslint"]
    },
    {
      "groupName": "Stylelint",
      "groupSlug": "stylelint-packages",
      "matchPackagePatterns": ["^stylelint"]
    },
    {
      "groupName": "Docusaurus",
      "groupSlug": "docusaurus-packages",
      "matchPackagePrefixes": ["@docusaurus/"]
    },
    {
      "groupName": "Font Awesome",
      "groupSlug": "fontawesome-packages",      
      "matchPackagePrefixes": ["@fontawesome/"]
    },
    {
      "matchPackagePrefixes": ["@types/"],
      "automerge": true
    }    
  ]
}
