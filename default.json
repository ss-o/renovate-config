{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Shareable configuration for automated dependency updates",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":separateMultipleMajorReleases",
    ":enableVulnerabilityAlerts",
    ":ignoreModulesAndTests",
    ":autodetectPinVersions",
    ":preserveSemverRanges",
    ":prConcurrentLimit10",
    ":automergeLinters",
    ":prHourlyLimit2",
    ":automergeMinor",
    ":automergePatch",
    ":automergeTypes",
    ":gitSignOff",
    ":pinSkipCi",
    "group:recommended",
    "group:monorepos",
    "workarounds:all"
  ],
  "dependencyDashboardTitle": "ðŸ“Š Dependency Dashboard",
  "dependencyDashboardApproval": true,
  "dependencyDashboardAutoclose": true,
  "assigneesFromCodeOwners": true,
  "osvVulnerabilityAlerts": true,
  "platformCommit": true,
  "postUpdateOptions": ["npmDedupe", "pnpmDedupe", "yarnDedupeHighest"],
  "commitBodyTable": true,
  "automergeType": "pr",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDepTypes": ["optionalDependencies"],
      "groupSlug": "optional-dependencies",
      "automerge": true
    },
    {
      "matchDepTypes": ["devDependencies"],
      "groupSlug": "dev-dependencies",
      "automerge": true
    },
    {
      "matchDepTypes": ["peerDependencies"],
      "groupSlug": "peer-dependencies",
      "automerge": true
    },
    {
      "matchPackagePrefixes": ["@types/"],
      "automerge": true
    }
  ]
}
